".container": {
	navBarHidden:"true",
	orientation: Ti.UI.PORTRAIT,
	layout: "vertical",
	width: Ti.UI.FILL,
	height: Ti.UI.FILL,
	backgroundColor:"black",
	backgroundImage: "/images/background.png"
},
"Switch": {
	style: Ti.UI.Android.SWITCH_STYLE_CHECKBOX
},
"View":{
	height: Ti.UI.SIZE,
	layout: "vertical"
},
"Label": {
	font: {fontSize: "18dp"},
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
},
"Picker": {
	width: Ti.UI.FILL
},
"TextField": {
	width: Alloy.Globals.styles.entry_fields_width,
	height: Alloy.Globals.styles.textfield_height,
	top: "10dp",
	borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	borderRadius: 20,
	backgroundColor: Alloy.Globals.styles.textfield_bg_color,
	borderColor: Alloy.Globals.styles.textfield_border_color,
	borderWidth: Alloy.Globals.styles.textfield_border_width,
	color: Alloy.Globals.styles.textfield_text_color
},
"Button": {
	focusable: true,
	width: Alloy.Globals.styles.entry_fields_width,
	height: Alloy.Globals.styles.button_height,
	top: "10dp",
	borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	borderRadius: 20,
	borderWidth: Alloy.Globals.styles.textfield_border_width,
	font: Alloy.Globals.styles.button_font,
	color: Alloy.Globals.styles.button_font_color,
	backgroundGradient: Alloy.Globals.styles.jannus_gradient
},
".header": {
	width: Ti.UI.FILL,
	height: Alloy.Globals.styles.header_height,
	backgroundGradient: Alloy.Globals.styles.jannus_gradient
},
".header_label": {
	font: Alloy.Globals.styles.title_font,
	color: "#333",
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
	top: "8dp"
},
".vertical": {
	layout: "vertical"
},
".horizontal": {
	layout: "horizontal"
},
".ldpi": {
	font: {fontSize: '9dp', fontWeight: 'normal' }
},
".mdpi": {
	font: {fontSize: '12dp', fontWeight: 'normal' }
},
".hdpi": {
	font: {fontSize: '18dp', fontWeight: 'bold' }
},
".xhdpi": {
	font: {fontSize: '24dp', fontWeight: 'bold' }
}